<%-
  groups = OodSupport::User.new.groups.sort_by(&:id).tap { |groups|
    groups.unshift(groups.delete(OodSupport::Process.group))
  }.map(&:name).grep(/^P./)
-%>
---
cluster:
  - "borah"
form:
  - version
  - num_cores
  - bc_queue
  - bc_num_slots
  - bc_num_hours
  - bc_vnc_resolution
  - bc_email_on_started
attributes:
  num_cores: 28
  bc_num_slots: 1
  bc_vnc_resolution:
    required: true
  version:
    widget: select
    label: "MATLAB version"
    help: "This defines the version of MATLAB you want to load."
    options:
      - [
          "R2023b", "matlab/r2023b",
        ]
      - [ 
          "R2020a", "matlab/r2020a",           
        ]
  bc_queue: "ondemand-p100" 
